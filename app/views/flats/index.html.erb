<h1>All flats</h1>

<% @flats.each do |flat| %>
  <div class="col-4">
    <div class="flat-card">
      <div class="flat-card-image" style="background-image: url('')"></div>
      <div class="flat-card-content">
        <div class="flat-card-title">
          <h4><%= flat.name%></h4>
        </div>
        <p><%= flat.description%></p>
        <div class="flex">
          <div class="flex">
            <i class="material-icons mr-2">people</i><%= flat.number_of_guests%> <span></span>
          </div>
          <div class="flex ml-3">
            <i class="material-icons mr-2">euro_symbol</i><%= flat.price_per_night%>
          </div>
        </div>
      </div>
      <div class="flat-card-actions">
        <%= link_to 'More details', flat_path %>
        <%= link_to 'Edit', edit_flat_path(flat) %>
        <%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
<%end%>

